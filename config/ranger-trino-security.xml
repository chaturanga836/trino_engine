<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns:xi="http://www.w3.org/2001/XInclude">

  <!-- Service name in Ranger -->
  <property>
    <name>ranger.plugin.trino.service.name</name>
    <value>trino</value>
  </property>

  <!-- URL to Ranger Admin (HTTP, not HTTPS) -->
  <property>
    <name>ranger.plugin.trino.policy.rest.url</name>
    <value>http://ec2-65-0-150-75.ap-south-1.compute.amazonaws.com:6080</value>
  </property>

  <!-- Ranger Admin credentials -->
  <property>
    <name>ranger.plugin.trino.policy.rest.username</name>
    <value>admin</value>
  </property>

<property>
    <name>ranger.plugin.trino.policy.source.impl</name>
    <value>org.apache.ranger.admin.client.RangerAdminRESTClient</value>
  </property>

  <property>
    <name>ranger.plugin.trino.policy.rest.password</name>
    <value>Admin@123</value>
  </property>

  <!-- Poll interval and cache directory -->
  <property>
    <name>ranger.plugin.trino.policy.pollIntervalMs</name>
    <value>30000</value>
  </property>
  <property>
    <name>ranger.plugin.trino.policy.cache.dir</name>
    <value>/var/trino/data/ranger-cache</value>
  </property>

  <!-- Optional: superusers / supergroups -->
  <property>
    <name>ranger.plugin.trino.super.users</name>
    <value></value>
  </property>
  <property>
    <name>ranger.plugin.trino.super.groups</name>
    <value></value>
  </property>

  <!-- Optional: group mapping -->
  <property>
    <name>ranger.plugin.trino.use.rangerGroups</name>
    <value>false</value>
  </property>
  <property>
    <name>ranger.plugin.trino.use.only.rangerGroups</name>
    <value>false</value>
  </property>

  <!-- Kerberos (disabled for now, not needed) -->
  <property>
    <name>ranger.plugin.trino.ugi.initialize</name>
    <value>false</value>
  </property>
</configuration>
